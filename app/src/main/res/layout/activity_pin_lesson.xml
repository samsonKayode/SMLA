<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.unesco.smla.PinLesson">

    <include
        android:id="@+id/pin_bar"
        layout="@layout/app_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <RadioGroup
                android:id="@+id/locations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RadioButton
                android:id="@+id/loc_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"

                android:textStyle="bold"
                android:onClick="cpos1"/>

            <RadioButton
                android:id="@+id/loc_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"

                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:onClick="cpos2"/>

            <RadioButton
                android:id="@+id/loc_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"

                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:onClick="cpos3"/>

            <RadioButton
                android:id="@+id/loc_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"

                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:onClick="cpos4"/>

            <RadioButton
                android:id="@+id/loc_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"

                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:onClick="cpos5"/>

            <RadioButton
                android:id="@+id/loc_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/empty"

                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:onClick="cpos6"
                android:layout_marginBottom="60dp"/>
            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="bottom">


                <Button
                    android:id="@+id/button18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/saveButton"
                    android:background="@color/buttonColor"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="10dp"
                    android:drawableLeft="@drawable/ic_check_circle_white_24dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:onClick="savePin"/>

                <Button
                    android:id="@+id/button17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/cancelButton"
                    android:background="@color/buttonColor"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:drawableLeft="@drawable/ic_cancel_white_24dp"
                    android:onClick="cancelPin"/>
            </LinearLayout>

        </LinearLayout>





    </ScrollView>

</LinearLayout>
